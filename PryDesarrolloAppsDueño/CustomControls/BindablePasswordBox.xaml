<UserControl x:Class="PryDesarrolloAppsDueño.CustomControls.BindablePasswordBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PryDesarrolloAppsDueño.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="800">

    <PasswordBox x:Name="txt_Password"
                           FontSize="12"
                           FontWeight="Medium"
                           FontFamily="Montserrat"                        
                           Foreground="White"
                           CaretBrush="LightGray"
                           BorderBrush="DarkGray"
                           VerticalContentAlignment="Center"
                           BorderThickness="0,0,0,2"
                           Padding="20,0,0,0">

        <PasswordBox.Background>
            <ImageBrush ImageSource="/PryDesarrolloAppsDueño;component/Imagenes/password.png"
                                    AlignmentX="Left"
                                    Stretch="Uniform"/>
        </PasswordBox.Background>
    </PasswordBox>
    
</UserControl>
